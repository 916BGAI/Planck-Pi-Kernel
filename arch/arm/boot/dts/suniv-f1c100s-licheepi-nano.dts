&i2c0 {
	status = "okay";

	ssd1306fb: ssd1306fb@3c {
		compatible = "solomon,ssd1306fb-i2c";
		reg = <0x3c>;
		solomon,width = <128>;
		solomon,height = <64>;
		reset-gpios = <&pio 0 1 GPIO_ACTIVE_HIGH>;
		solomon,page-offset = <0>;
		solomon,com-invdir;
		debug = <0>;
	};
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pe_pins>;
	status = "okay";
};

